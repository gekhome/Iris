@model RegAnathesiMetaboliViewModel
@using Iris.DAL;
@using Iris.Models;
@{
    Layout = null;
    string date_apofasi = "";
    Nullable<DateTime> dt = Model.ΗΜΝΙΑ_ΣΥΝΤΑΞΗ;
    date_apofasi = dt.HasValue ? dt.Value.ToString("dd-MM-yyyy") : string.Empty;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style scoped="scoped">
        .k-detail-cell .k-tabstrip .k-content {
            padding: 0.2em;
        }

        .student-details ul {
            list-style: none;
            font-style: italic;
            margin: 15px;
            padding: 0;
        }

        .student-details ul li {
            margin: 0;
            line-height: 1.7em;
        }

        .student-details label {
            display: inline-block;
            width: 200px;
            padding-right: 10px;
            text-align: right;
            font-style: normal;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="body-content" style="margin:5px 0px 5px 0px;font-size:small;">

        @(Html.Kendo().TabStrip()
        .Name("TabStrip")
        .SelectedIndex(0)
        .Animation(animation => animation.Open(open => open.Fade(FadeDirection.In)))
        .Items(items =>
        {
            items.Add().Text("Στοιχεία ανάθεσης (1)").Content(
                @<div class="student-details">
                    <table>
                        <tr>
                            <td style="min-width:500px">
                                <ul>
                                    <li>
                                        <label>Πρωτόκολλο:</label>@Model.ΑΠΟΦΑΣΗ_ΠΡΩΤΟΚΟΛΛΟ
                                    </li>
                                    <li>
                                        <label>Διαχειριστής:</label>@Model.ΔΙΑΧΕΙΡΙΣΤΗΣ
                                    </li>
                                    <li>
                                        <label>Απόφαση είδος:</label>@Model.ΑΠΟΦΑΣΗ_ΕΙΔΟΣ
                                    </li>
                                    <li>
                                        <label>Ημ/νία σύνταξης:</label>@date_apofasi
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </table>
                </div>);
            items.Add().Text("Στοιχεία ανάθεσης (2)").Content(
                @<div class="student-details">
                     <table>
                         <tr>
                             <td style="min-width:500px">
                                 <ul>
                                     <li>
                                         <label>Περιφερειακή:</label>@Model.ΕΠΩΝΥΜΙΑ_ΠΕΡΙΦΕΡΕΙΑ
                                     </li>
                                     <li>
                                         <label>Πατρώνυμο:</label>@Model.ΠΑΤΡΩΝΥΜΟ
                                     </li>
                                     <li>
                                         <label>Κλάδος:</label>@Model.ΚΛΑΔΟΣ
                                     </li>
                                     <li>
                                         <label>Σύμβαση:</label>@Model.ΣΥΜΒΑΣΗ_ΕΙΔΟΣ
                                     </li>
                                 </ul>
                             </td>
                     </tr>
                 </table>
                </div>);
        })
        )   @*-- Tabstrip ---*@
    </div>
</body>
</html>
